# -*- coding: undecided -*-
require 'ship'

describe Ship do
  it "should have size" do
    Ship.new(1).size.should == 1
  end

  it "should not have size = 0" do
    lambda do
      Ship.new(0)
    end.should raise_error(ArgumentError)
  end

  it "should not allow negative sizes" do
    lambda do
      Ship.new(-1)
    end.should raise_error(ArgumentError)
  end

end

describe
